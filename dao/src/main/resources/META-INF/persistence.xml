<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
           http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="control.project" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>it.academy.vladsin.control.project.dao.entity.ApplicantEntity</class>
        <class>it.academy.vladsin.control.project.dao.entity.AuthorizationUserEntity</class>
        <class>it.academy.vladsin.control.project.dao.entity.ExamEntity</class>
        <class>it.academy.vladsin.control.project.dao.entity.FacultyEntity</class>
        <class>it.academy.vladsin.control.project.dao.entity.UserEntity</class>
        <class>it.academy.vladsin.control.project.dao.entity.UniversityEntity</class>
        <class>it.academy.vladsin.control.project.dao.entity.StudentEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/university?createDatabaseIfNotExist=true&amp;serverTimezone=Europe/Moscow"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            <property name="hibernate.show_sql" value="true"/>

            <property name="hibernate.connection.pool_size" value="30"/>
            <property name="hibernate.connection.isolation" value="2"/>

            <property name="hibernate.cache.region.factory_class"
                      value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.auto_evict_collection_cache" value="true"/>
            <property name="net.sf.ehcache.configurationResourceName" value="ehcache.xml"/>
        </properties>
    </persistence-unit>

</persistence>